source "https://rubygems.org"

# Utilitzar GitHub Pages gem per compatibilitat completa
gem "github-pages", group: :jekyll_plugins

# Plugins adicionals que no estan inclosos en github-pages
group :jekyll_plugins do
  gem "jekyll-toc"
end

# Windows i JRuby no inclouen zoneinfo files
platforms :mingw, :x64_mingw, :mswin, :jruby do
  gem "tzinfo", ">= 1", "< 3"
  gem "tzinfo-data"
end

# Performance-booster per Windows
gem "wdm", "~> 0.1.1", :platforms => [:mingw, :x64_mingw, :mswin]

# Kramdown parser per GitHub Pages
gem "kramdown-parser-gfm"

# HTTP server
gem "webrick", "~> 1.7"